<?xml version="1.0" encoding="utf-8" ?>
<Settings>
  <Sitecore>
    <IdentityServer>
      <PublicOrigin>#{ID:PublicOrigin}</PublicOrigin>
      <CertificateThumbprint>#{ID:CertificateThumbprint}</CertificateThumbprint>
      <CertificateStoreLocation>#{ID:CertificateStoreLocation}</CertificateStoreLocation>
      <CertificateStoreName>#{ID:CertificateStoreName}</CertificateStoreName>
      <SitecoreMembershipOptions>
        <ConnectionString>#{ID:ConnectionString}</ConnectionString>
      </SitecoreMembershipOptions>
      <AccountOptions>
        <AllowLocalLogin>#{ID:SitecoreIdAllowLocalLogin}</AllowLocalLogin>
        <PasswordRecoveryUrl>#{ID:PasswordRecoveryUrl}/sitecore/login?rc=1</PasswordRecoveryUrl>
      </AccountOptions>
      <Clients>
        <DefaultClient>
          <AllowedCorsOrigins>
            <AllowedCorsOriginsGroup1>#{ID:ClientOriginsGroup}</AllowedCorsOriginsGroup1>
          </AllowedCorsOrigins>
        </DefaultClient>
        <PasswordClient>
          <ClientSecrets>
            <ClientSecret1>#{ID:ClientSecret}</ClientSecret1>
          </ClientSecrets>
        </PasswordClient>
        <CliServerClient>
          <ClientId>cli</ClientId>
          <ClientName>cli</ClientName>
          <AccessTokenType>0</AccessTokenType>
          <AccessTokenLifetimeInSeconds>3600</AccessTokenLifetimeInSeconds>
          <IdentityTokenLifetimeInSeconds>3600</IdentityTokenLifetimeInSeconds>
          <RequireClientSecret>true</RequireClientSecret>
          <AllowOfflineAccess>false</AllowOfflineAccess>
          <AllowedGrantTypes>
            <AllowedGrantType1>client_credentials</AllowedGrantType1>
          </AllowedGrantTypes>
          <ClientSecrets>
            <ClientSecret1>#{ID:ClientSecret}</ClientSecret1>
          </ClientSecrets>
          <AllowedScopes>
            <AllowedScope3>sitecore.profile.api</AllowedScope3>
          </AllowedScopes>
        </CliServerClient>
      </Clients>
    </IdentityServer>
  </Sitecore>
</Settings>
